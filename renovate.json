{
  "extends": ["config:base"],
  "commitBodyTable": true,
  "branchPrefix": "deps/",
  "labels": ["dependencies"],
  "stabilityDays": 3,
  "semanticCommits": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["d:major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "addLabels": ["d:minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "addLabels": ["d:patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["pin"],
      "addLabels": ["d:pin"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["rollback"],
      "addLabels": ["d:rollback"],
      "automerge": true
    }
  ]
}
